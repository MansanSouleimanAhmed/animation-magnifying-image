{
	"compilerOptions": {
		"target": "ES5",
		"module": "commonjs",
		"noImplicitAny": true,
		"jsx": "react",
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "./lib",
		"removeComments": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"preserveConstEnums": true,
		"declaration": true
	},
	"include": ["./src/**/*.tsx", "./src/**/*.ts"],
	"exclude": ["node_modules"]
}
